@import "~common/global"

.wrap
  padding-bottom px2rem(85)
.pannel
  background $color-white
  padding px2rem(20) px2rem(20) px2rem(15) px2rem(20)
  margin-bottom px2rem(12)
  .header
    font-size $font-size16
    margin-bottom px2rem(2)
  .content
    font-size px2rem(13)
    font-weight 300
    color $font-color-light
  .footer
    font-size px2rem(13)
    font-weight 300
    box()
    .setDefaultArea
      flex 1
      box()
      align-items center
      .icon
        position relative
        top px2rem(-1)
  .split
    border(none)
    border(top)
    margin px2rem(18) 0 px2rem(15) 0
  .edit
    color $color-dark
    padding px2rem(1) px2rem(14)
    border(right)
  .delete
    padding px2rem(1) px2rem(14)
.bottom
  footerStyle()
  >a
    flex 1
