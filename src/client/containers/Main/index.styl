@import "~common/global.styl"

html, body
  width 100%
  height 100%
  font-size $root-size
  background-color $color-gray
  font-family 'PingFangSC',-apple-system,BlinkMacSystemFont,Segoe UI,Microsoft Yahei,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif
:global #root
  width 100%
  max-width px2rem(600)
  margin 0 auto
  height 100%
  font-size $font-size12
*
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
.wrap
  width 100%
  height 100%

::-webkit-input-placeholder { /* WebKit browsers */
  color #bfbfbf
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
  color #bfbfbf
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
  color #bfbfbf
}
:-ms-input-placeholder { /* Internet Explorer 10+ */
  color #bfbfbf
}
