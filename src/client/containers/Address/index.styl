@import "~common/global"

.wrap
  font-size px2rem(15)
  font-weight 300
.panel
  padding 0 px2rem(20)
  background $color-white
  margin-bottom px2rem(10)
  height px2rem(55)
  box()
  align-items center
  .long
    flex 1
    color $color-tag
.form
  padding 0 px2rem(20)
  background $color-white
  margin-bottom px2rem(10)
  .label
    box()
    align-items center
    // ::-webkit-input-placeholder
    //   color $color-tag
    input
      flex 1
      font-size px2rem(15)
      font-weight 300
      width 100%
      height 100%
      border(none)
  .inputLabel
    display inline-block
    width px2rem(70)
    text-align justify
    // &::after
    //   content ""
    //   display inline-block
    //   width 100%
    //   overflow hidden
    //   height 0
  .info
    border(bottom)
    padding px2rem(15) 0
    color $color-tag
  .address
    height px2rem(90)
    padding-top px2rem(7)
    ::-webkit-input-placeholder
      font-weight 300
    .textarea
      border(none)
      width 100%
      height 100%
      font-weight 300
.btnSave
  footerStyle()
.right
  float right
  color $color-font-light
  font-weight 200
