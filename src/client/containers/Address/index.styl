@import "~common/global"

.wrap
  font-size px2rem(15)
  font-weight 300
.panel
  padding 0 px2rem(20)
  background $color-white
  margin-bottom px2rem(10)
  height px2rem(55)
  box()
  align-items center
  .long
    flex 1
    color $color-tag
.form
  padding 0 px2rem(20)
  background $color-white
  margin-bottom px2rem(10)
  .label
    display block
    ::-webkit-input-placeholder
      color $color-tag
    input
      font-size px2rem(15)
      font-weight 300
      width 100%
      height 100%
      border(none)
  .info
    border(bottom)
    padding px2rem(15) 0
    color $color-tag
  .address
    height px2rem(90)
    padding-top px2rem(7)
    ::-webkit-input-placeholder
      font-weight 300
    .textarea
      width 100%
      height 100%
      font-weight 300
.btnSave
  padding px2rem(15)
  position fixed 
  bottom 0
  width 100%
.right
  float right
  color $color-font-light
  font-weight 200
