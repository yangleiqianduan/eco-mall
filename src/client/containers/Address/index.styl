@import "~common/global"

.wrap
  padding px2rem(20) 0
.panel
  padding 0 px2rem(20)
  background $color-white
  margin-bottom px2rem(10)
  height px2rem(55)
  box()
  align-items center
  .long
    flex 1
    color $color-tag
.form
  padding 0 px2rem(20)
  background $color-white
  margin-bottom px2rem(10)
  .info
    border-bottom 0.5px solid $color-border
    line-height px2rem(55)
    height px2rem(55)
    color $color-tag
  .address
    height px2rem(90)
    .textarea
      width 100%
      padding-top 5px
      font-weight 200
.btnSave
  padding 0 px2rem(20)
  position fixed 
  bottom px2rem(20)
  width 100%
    
    
