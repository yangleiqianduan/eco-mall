@import "~common/global.styl"

$left-width = px2rem(87)

.wrap
  box()
  background $color-white
.left
  width $left-width
  background $color-white
  border(right)
  animation(mymove 5s infinite)
.leftFix
  position fixed
  top 0
  left 0
  padding-top 1rem
  width $left-width - px2rem(1)
.right
  flex 1
  padding 1rem
.content
  background $color-white
  margin-bottom 10px
  width 50%
  display inline-block
  text-align center
  &:nth-child(odd)
    .inner
      padding-right 0.5rem
  &:nth-child(even)
    .inner
      padding-left 0.5rem
