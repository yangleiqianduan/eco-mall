@import "~common/global.styl"

$left-width=px2rem(100)

.wrap
  box()
  height 100%
  position fixed
  width 100%
  top 0
  left 0
  overflow-y auto
.left
  min-width $left-width
  background $color-gray
  border(right)
.leftFix
  position fixed
  top 0
  left 0
  padding-top px2rem(10px)
  width $left-width - px2rem(1)
.right
  flex(1)
  width 1px
  background $color-white
  ul
    background $color-white
    padding-bottom px2rem(50)
  // padding px2rem(20) px2rem(10)
.content
  // margin-bottom px2rem(10)
  width 50%
  display inline-block
  text-align center
  .inner
    border(bottom, 1px, #EDEDED)
    padding px2rem(20) px2rem(10)
  &:nth-child(odd)
    .inner
      border(right, 1px, #EDEDED)
      padding-right px2rem(10)
  &:nth-child(even)
    .inner
      border(left, 1px, transparent)
      padding-left px2rem(10)
.bottom
  text-align center
