@import "~common/global.styl"

.wrap
  position relative
.inner
  box()
  position absolute
  right 0
  min-width 100%
.pannel
  box()
  align-items center
  font-size $font-size16
  font-weight 300
  padding px2rem(20) 0 px2rem(15)
  background $color-white
.checkArea
  width px2rem(40)
  text-align center
.img
  width px2rem(100)
  height px2rem(100)
.titleArea
  flex 1
  min-height px2rem(100)
  padding 0 px2rem(20) 0 px2rem(15)
  box()
  flex-direction column
.title
  G-cut-p(1)
  margin-top px2rem(-2)
  color $color-dark
.light
  flex 1
  padding px2rem(6) 0
  color $color-font-light
  font-size px2rem(13)
.offShelf
  color $color-font-light
  font-size $font-size12
.priceArea
  box()
  align-items flex-end
  justify-content space-between
  font-size $font-size14
  margin-bottom px2rem(-2)
.delete
  transition all .1s
  background $color-red
  color $color-white
  width 0
  font-size 0
  box()
  align-items center
  justify-content center
  overflow hidden
.showDelete
  font-size $font-size16
  width px2rem(74)
