@import "~common/global.styl"

.wrap
  background $color-white
  height 100%
  .banner
    min-height px2rem(170)
    color $color-white
  .navOuter
    margin px2rem(16) 0 px2rem(36) 0
    padding 0 px2rem(16)
  .label
    background $color-white
    padding 0 px2rem(20) px2rem(16) px2rem(20)
    box()
  .title
    font-weight 500
    font-size $font-size20
    color $color-dark
    flex 1
  .subTitle
    font-size px2rem(13)
    color $color-font-light
    padding-left px2rem(5)
  .plat
    padding 0 px2rem(20) px2rem(36) px2rem(20)
    background $color-white
  .last
    padding-bottom 0
  .subject
    padding-right 0
    // min-height px2rem(150)
  .page
    position relative
    top px2rem(4)
  .current
    font-size $font-size16
    color $color-dark
    font-weight 300
  .total
    font-size $font-size12
    color #9B9B9B
    font-weight 100
    span
      position relative
      top px2rem(-1)
  .footer
    padding px2rem(30) 0
    text-align center
    img
      user-select none
      width px2rem(308)
