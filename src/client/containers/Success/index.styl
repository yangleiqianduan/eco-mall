@import "~common/global.styl"

.wrap
  background $color-gray
  height 100%
  text-align center
  .title
    font-size $font-size2
    color $color-dark
  .tip
    font-size $font-size
    color $color-light
    padding px2rem(10) 0 px2rem(15)
  .head
    font-size px2rem(14)
    padding px2rem(10) 0 0
  .reason
    background $color-white
    position absolute
    bottom 0
    left 0
    right 0
    padding .2rem .1rem .4rem
    >textarea
      width px2rem(250)
      height px2rem(60)
      background rgba(242, 242, 244, 0.5)
      border(all, 1px, #e4e4e4)
    .line
      width px2rem(45)
      border(bottom, 1px, #f2f2f4)
      position absolute
      top px2rem(40)
    .left
      left px2rem(43)
    .right
      right px2rem(43)
  .submit
    btn()
    width 90%
    height px2rem(40)
    line-height px2rem(40)
    margin px2rem(30) auto px2rem(20)
    background $color-normal
    color $color-white
    font-size $font-size14

