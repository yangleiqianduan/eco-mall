@import "~common/global"

.wrap
  margin-bottom px2rem(12)
  .pannel
    background #fff
    margin-bottom px2rem(12)
    font-size $font-size16
    padding px2rem(15) px2rem(20)
    border(bottom, px2rem(1), transparent)
  .content
    border(top, px2rem(1), transparent)
    padding 0 px2rem(20)
  .bottom
    position fixed
    width 100%
    bottom 0
    left 0
    padding px2rem(15)
  .footer
    position fixed
    bottom 0
    width 100%
    max-width $max-width
    padding px2rem(15) px2rem(20)
    box()
    align-items center
  .priceArea
    height px2rem(55)
    background $color-dark
    padding 0 px2rem(15)
    color $color-white
    box()
    align-items center
    flex 1
  .buyArea
    height px2rem(55)
    box()
    align-items center
    background $color-bright
    text-align center
    width px2rem(128)
    justify-content center
