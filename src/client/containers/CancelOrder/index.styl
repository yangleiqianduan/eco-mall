@import "~common/global"

.amountInfo
  margin px2rem(12) 0
  height px2rem(55)
  background-color $color-white
  box()
  justify-content space-between
  align-items center
  padding 0 px2rem(20)
  h3,p
    font-size px2rem(16)
  h3
    color $color-tag
  p
    color #f66560
.remarkInfo
  background-color $color-white
  height px2rem(127)
  padding px2rem(20)
  .remark
    font-size px2rem(14)
    width 100%
    height 100%
.explainInfo
  margin px2rem(20)
  p
    color #b7b7b7 + 20%
    font-size px2rem(13)
    padding px2rem(2) 0
  .tel
    color #6D9CEC
    text-decoration underline
.footer
  position fixed
  bottom 0
  width 100%
  max-width $max-width
  box()
  align-items center
  box-shadow(0 px2rem(-2) px2rem(4) rgba(0,0,0,0.075))
  .btn
    height px2rem(55)
    box()
    align-items center
    background $color-tag
    text-align center
    width 100%
    justify-content center
    font-size $font-size16
    font-weight bold
    color $color-white