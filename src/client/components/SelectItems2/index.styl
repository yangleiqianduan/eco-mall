@import "~common/global.styl"

.wrap
  background #FFF
  .item
    padding 0 px2rem(20)
    &:active
      background-color $color-gray
    & > div
      box()
      align-items()
      justify-content()
      border(bottom)
      padding px2rem(20) 0
  .picWrap
    width px2rem(80)
    min-width px2rem(80)
    height px2rem(80)
    line-height px2rem(80)
    margin-right px2rem(20)
    background-color #F4F4F4
    position relative
    text-align center
    overflow hidden
    img
      width 100%
      min-height 100%
    .tag
      position absolute
      bottom px2rem(5)
      right px2rem(5)
      line-height px2rem(15)
      border-radius px2rem(7)
      padding 0 px2rem(7)
      background-color #F1ECE1
      color #898989
      transform(scale(.95))
  .detail
    margin-right px2rem(20)
    flex()
    .tit
      font-size $font-size16
      // line-height px2rem(14)
      margin-bottom px2rem(11)
      color #333
    .desc
      color #9C9FA1
      font-size $font-size13
      G-cut-p()
  .showPic
    background-color rgba(0, 0, 0, .9)
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    z-index 10
    .sliderWrap
      height 100%
      width 100%
      position absolute
      top 50%
      & > div
        margin-top -50%
    .close
      font-size $font-size20
      color #FFF
      width px2rem(35)
      line-height px2rem(35)
      text-align center
      position absolute
      top px2rem(10)
      right px2rem(10)
      z-index 11
      border-radius 50%
      background #000
    .page
      position absolute
      text-align center
      width 100%
      bottom px2rem(26)
      box-shadow 0 0 4px rgba(0,0,0,0.2)
      color #FFF
      font-size $font-size14
