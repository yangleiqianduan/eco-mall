@import "~common/global.styl"

.wrap
  background #FFF
  .item
    box()
    align-items()
    justify-content()
    padding px2rem(16) 0
    margin 0 px2rem(16)
    &:not(:last-child)
      border(bottom)
  .picWrap
    width px2rem(80)
    min-width px2rem(80)
    height px2rem(80)
    line-height px2rem(80)
    margin-right px2rem(20)
    background-color #F4F4F4
    position relative
    text-align center
    img
      width 80%
    .tag
      position absolute
      bottom px2rem(8)
      right px2rem(2)
      line-height 1
      border-radius px2rem(8)
      padding px2rem(1) px2rem(8)
      background-color #F1ECE1
      color #898989
      transform(scale(.8))
  .detail
    margin-right px2rem(20)
    flex()
    .tit
      font-size $font-size16
      margin-bottom px2rem(10)
    .desc
      color #9C9FA1
      G-cut-p()
  .showPic
    background-color rgba(0, 0, 0, .9)
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    z-index 2
    // box()
    // justify-content()
    .sliderWrap
      position relative
      top 20%
    .close
      font-size $font-size20
      color #FFF
      width px2rem(35)
      line-height px2rem(35)
      text-align center
      position absolute
      top px2rem(10)
      right px2rem(10)
      z-index 3
      border-radius 50%
      background #000
    .page
      position absolute
      text-align center
      width 100%
      bottom px2rem(26)
      box-shadow 0 0 4px rgba(0,0,0,0.2)
      color #FFF
      font-size $font-size14
