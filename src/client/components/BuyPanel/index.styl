@import "~common/global.styl"
.wrap
  removeShape()
  display-flex()
  position fixed
  bottom 0
  width 100%
  z-index 5
  font-weight 300
  .infoContainer
    transform opacity 0
    max-height 75%
    width 100%
    position fixed
    left 0
    padding .14rem
    z-index 101
    background-color $color-white
    transition transform .3s ease-out
    .skuContainer
      box()
      height px2rem(60)
      .skuImg
        height 100%
        width px2rem(130)
        position relative
        img
          position absolute
          bottom 0
          right 0
          color white
          height px2rem(110)
          width px2rem(110)
          overflow hidden
      .skuInfo
        flex 1
        padding-left px2rem(10)
        .price
          color $color-red
          font-size $font-size20
        .info
          color $color-font-light
    .close
      position relative
      top px2rem(-5)
      right px2rem(-5)
      color $color-font-light
      font-size px2rem(20)
    .line
      border(bottom)
      margin px2rem(20) 0
    .checkArea
      overflow-y auto
      padding-bottom px2rem(55)
// sku区域
    .attrArea
      margin-bottom px2rem(20)
    .label
      color $color-font-light
      font-size px2rem(15)
      padding-bottom px2rem(5)
    .itemSkuOuter
      color $color-dark
      font-size $font-size16
    .attr
      min-width px2rem(78)
      height px2rem(34)
      margin-right px2rem(10)
      display inline-block
      color $color-dark
      border(all)
      border-color $color-font-light
    .disabled
      border-color $color-border
      color $color-border
    .active
      border-color $color-dark
      &:before
        content ''
        position absolute
        display block
        width 0
        height 0
        border-top px2rem(10) solid $color-dark
        border-right px2rem(10) solid transparent
    .sku
      box()
      width 100%
      height 100%
      padding 0 px2rem(10)
      align-items center
      justify-content center
    .btnArea
      footerStyle()
      font-size $font-size14
      .container
        box()
        align-items center
        justify-content center
        width 100%
        height px2rem(55)
        background $color-dark
        color $color-white
      .add
        flex 1
      .buy
        flex 1
        color $color-dark
        background $color-bright
    .disabled
      .container
        background $color-font-light + 4%
      .buy
        background $color-bright + 40%
        color $color-dark + 40%
  .show
    visibility visible
    opacity 1
    transform translate(0, -100%)
  .hide
    transform translate(0, px2rem(40))
    .skuImg
      p
        opacity 0
  .cover
    opacity .7
    height 100%
    width 100%
    position fixed
    background-color #000
    top 0
    left 0
    z-index 100
