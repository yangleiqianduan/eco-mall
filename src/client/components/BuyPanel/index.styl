@import "~common/global.styl"

.wrap
  removeShape()
  display-flex()
  position fixed
  bottom 0
  width 100%
  z-index 5
  .infoContainer
    height 75%
    width 100%
    position fixed
    bottom 0
    left 0
    z-index 101
    background-color $color-white
    .picContainer
      height 28%
      width 35%
      position absolute
      z-index 102
      top -10%
      left 7%
      background-color $color-gray
    .price
      color $color-red
      font-size $font-size20
      margin-top px2rem(20)
      margin-left 44%
    .info
      color #9c9fa1
      margin-left 45%
      margin-right px2rem(30)
      margin-top px2rem(8)
      word-break break-all
    .close
      position absolute
      top 0
      right px2rem(10)
      width px2rem(20)
      height px2rem(20)
      color #9c9fa1
      font-size px2rem(40)
    .line
      border(bottom, 1px, $color-border)
      margin 40px auto
      width 355px
    .subContainer
      width 355px
      border(bottom, 1px, $color-border)
      margin 40px auto
      .title
        font-size px2rem(15)
        color #9C9FA1
      input
        width 100%
        height 35px
        border(none)
        margin-top 30px
        color #394043
        font-size px2rem(15)
      .subContainer.focus
        border(bottom, 1px, #394043)
    .btnArea
      position fixed
      bottom 0
      width 100%
      font-size $font-size14
      .container
        width px2rem(355)
        height px2rem(55)
        margin 0 auto 10px auto
  .cover
    opacity .7
    height 100%
    width 100%
    position fixed
    background-color #000
    top 0
    left 0
    z-index 100
