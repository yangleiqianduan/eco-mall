@import "~common/global.styl"

.showPic
  background-color rgba(0, 0, 0, .9)
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 10
  .sliderWrap
    height 100%
    width 100%
    position absolute
    top 40%
    & > div
      margin-top -50%
  .close
    // width px2rem(40)
    position absolute
    bottom px2rem(50)
    left 50%
    margin-left px2rem(-20)
    z-index 11
  .page
    position absolute
    bottom px2rem(128)
    left px2rem(20)
    box-shadow 0 0 4px rgba(0,0,0,0.2)
    color #FFF
    font-size $font-size16
.iconCheck
  margin-right px2rem(7)
