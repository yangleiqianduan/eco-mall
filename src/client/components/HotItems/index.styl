@import "~common/global.styl"

.wrap
  .container
    width 50%
    display inline-block
    text-align center
    margin-bottom 2rem
    >a
      display block
    &:nth-child(odd)
      >a
        padding-right 1rem
    &:nth-child(even)
      >a
        padding-left 1rem
    .img
      width 100%
    .text
      color $color-dark
      font-size $font-size1
      line-height 2rem
