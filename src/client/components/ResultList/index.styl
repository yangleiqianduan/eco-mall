@import "~common/global.styl"

.wrap
  background #FFF
  .item
    box()
    align-items()
    justify-content()
    padding px2rem(20) 0
    margin 0 px2rem(20)
    &:not(:last-child)
      border(bottom)
  .picWrap
    width px2rem(80)
    min-width px2rem(80)
    height px2rem(80)
    line-height px2rem(80)
    margin-right px2rem(20)
    // background-color #F4F4F4
    position relative
    text-align center
    overflow hidden
    img
      width 100%
      min-height 100%
    // .tag
        // position absolute
        // bottom px2rem(5)
        // right px2rem(5)
        // line-height px2rem(15)
        // border-radius px2rem(7)
        // padding 0 px2rem(7)
        // background-color #F1ECE1
        // color #898989
        // transform(scale(.95))
  .detail
    flex()
    header
      box()
      margin-bottom px2rem(11)
    .left
      flex()
      margin-right px2rem(20)
      .tit
        font-size $font-size16
        color #333
        margin-bottom px2rem(11)
        .spcColor
          color $color-light
      .desc
        color #9C9FA1
        font-size $font-size13
        G-cut-p()
    .right
      text-align right
      .prec
        color #FF5A5A
        font-size $font-size24
        line-height px2rem(30)
      .count
        color #9C9FA1
    .progressBar
      background-color #EAEAEA
      height px2rem(2)
      position relative
      font-size 0
      border-radius px2rem(1)
      span
        background-color #394043
        border-radius px2rem(1)
        width 0
        transition all 1s ease
        height px2rem(2)
        position absolute
        left 0
        top 0
