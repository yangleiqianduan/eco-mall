@import "~common/global.styl"

.imgContainer
  box()
  flex-wrap wrap
  .mask
    box()
    align-items center
    justify-content center
    position absolute
    height 100%
    width 100%
    background rgba(0,0,0,0.3)
    z-index 5
    top 0
    left 0
  .loaded
    background rgba(0,0,0,0)
  .uploadFailed
    color red
  .failed
    background rgba(0,0,0,.1)
  .outer
    margin-top .1rem
  .upload
    box()
    align-items center
    justify-content center
    cursor pointer
    input 
      display none
    span
      color rgba(0,0,0,0.3)
    &:hover
      color #dd2727
    .upload-icon
      background url('./upload.png') 0 0 no-repeat
      background-size 100%
      position absolute
      height 100%
      width 100%
    .upload-text
      color #ffc64b
      position absolute
      top 60%
  .preview
    display inline-block
    border #ddd
    position relative
    border-radius .4rem
    cursor pointer
    margin-right .1rem
    img
      width 100%
      height 100%
    .close
      position absolute
      top -.1rem
      right -.1rem
