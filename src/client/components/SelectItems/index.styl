@import "~common/global.styl"

.wrap
  box()
  margin 0 50px
  flex-wrap wrap
  justify-content space-between
  >div
    width px2rem(110)
    margin px2rem(5) 0
    height px2rem(30)
    line-height px2rem(30)
  .selected
    border(all, 1px, $color-dark)
    color $color-dark
  .selected::before
    content ''
    position absolute
    display block
    width 0
    height 0
    border-top px2rem(10) solid $color-dark
    border-right px2rem(10) solid transparent
  .unselected
    border(all, 1px, $color-light)
    color $color-light
