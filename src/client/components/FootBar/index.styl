@import "~common/global.styl"

.wrap
  footerStyle()
  .content
    flex 1
    box()
    // width px2rem(355)
    height px2rem(55)
    color $color-dark
    overflow hidden
    box-shadow(0 px2rem(-2) px2rem(4) rgba(0,0,0,0.075))
    > div
      box()
      align-items center
      justify-content center
    .icons
      background $color-white
      box()
      .item
        min-width px2rem(50)
        line-height px2rem(55)
        text-align center
        position relative
        &:after
          content ''
          position absolute
          right px2rem(-0.5)
          top px2rem(16)
          width px2rem(1)
          height px2rem(24)
          background-color #979797
          opacity 0.3
      .noBoard
        &:after
          display none
      .cart
        color $color-white
        em
          font-size px2rem(12)
          font-weight 300
          width px2rem(14)
          height px2rem(14)
          box()
          align-items center
          justify-content center
          background-color $color-red
          position absolute
          right px2rem(8)
          top px2rem(14)
          border-radius 50%
          span
            transform scale(0.8)
    .buyArea
      flex 1
      height 100%
      font-size $font-size16
      box()
      align-items center
      >div
        box()
        height 100%
        justify-content center
        align-items center
      .addCart
        flex 1
        color $color-dark
        font-weight bold
        background $color-white
      .buy
        flex 1
        background $color-bright
        color $color-tag
        font-weight bold
      .disabled
        flex 1
        background $color-font-light
        color $color-white + 60%
        span
          opacity 0.5
