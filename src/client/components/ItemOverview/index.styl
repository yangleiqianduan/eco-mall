@import "~common/global.styl"

.wrap
  font-weight 300
  @extend .G-card
  padding-bottom px2rem(20)
  header
    box()
    margin-bottom px2rem(10)
  .left
    max-width 66%
    .item
      margin-top px2rem(8)
      margin-bottom px2rem(12)
    h1
      font-size $font-size20
      color $color-dark
      margin-bottom px2rem(3)
      font-weight bold
    h2
      font-size $font-size12
      color $color-light
      margin-bottom px2rem(24)
      // display none
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
  .right
    flex()
    text-align right
    font-weight 400
    // padding-top px2rem(4)
    .salePrice
      color $color-spc
      font-size $font-size18
      margin-bottom px2rem(5)
      word-spacing no-wrap
    .marketPrice
      color $color-light
      word-spacing no-wrap
  .tagsTop
    margin-top px2rem(-24)
  .tags
    border(bottom)
    margin-bottom px2rem(18)
    padding-bottom px2rem(20)
  .item
    display inline-block
    height px2rem(20)
    line-height px2rem(18)
    height px2rem(18)
    // border(all,1px,$color-tag-light)
    background-color $color-tag + 90%
    padding 0 px2rem(5)
    margin-right px2rem(10)
    font-size $font-size12
    font-weight 300
    color $color-tag
    border-radius px2rem(2)
  .main
    color $color-light
    box()
    margin-bottom px2rem(15)
    padding-bottom px2rem(15)
    border(bottom)
    display none
    & > div
      flex()
      text-align center
      &:first-child
        text-align left
      &:last-child
        text-align right
  footer
    box()
    align-items center
    ul
      flex 1
      color #394043
    .dotWrap
      color $color-light
      box()
      align-items center
    .itemTag
      font-size px2rem(15)
      display inline-block
      position relative
      text-indent 1em
      margin-right px2rem(30)
      &:before
        content ''
        position absolute
        left 0
        top calc(50% - 0.025rem)
        width px2rem(5)
        height px2rem(5)
        background-color $color-normal
        border-radius 50%
