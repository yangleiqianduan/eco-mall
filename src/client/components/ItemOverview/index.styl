@import "~common/global.styl"

.wrap
  font-weight 300
  @extend .G-card
  header
    box()
    margin-bottom px2rem(10)
  .left
    max-width 66%
    h1
      font-size $font-size20
      color $color-dark
      margin-bottom px2rem(3)
      font-weight normal
    h2
      font-size $font-size12
      color $color-light
      display none
  .right
    flex()
    text-align right
    padding-top px2rem(4)
    .salePrice
      font-weight normal
      color $color-spc
      font-size $font-size18
      margin-bottom px2rem(5)
      word-spacing no-wrap
    .marketPrice
      color $color-light
      word-spacing no-wrap
  .tags
    border(bottom)
    margin-bottom px2rem(15)
    padding-bottom px2rem(15)
    .item
      display inline-block
      height px2rem(20)
      line-height px2rem(20)
      border(all,1px,$color-tag)
      padding 0 px2rem(5)
      margin-right px2rem(10)
      font-size $font-size12
      font-weight 300
      color $color-tag
  .main
    color $color-light
    box()
    margin-bottom px2rem(15)
    padding-bottom px2rem(15)
    border(bottom)
    display none
    & > div
      flex()
      text-align center
      &:first-child
        text-align left
      &:last-child
        text-align right
  footer
    box()
    align-items center
    ul
      flex 1
    .dotWrap
      color $color-light
      box()
      align-items center
    .item
      font-size $font-size14
      display inline-block
      position relative
      text-indent 1em
      margin-right px2rem(10)
      &:before
        content ''
        position absolute
        left 0
        top px2rem(6)
        width px2rem(5)
        height px2rem(5)
        background-color $color-dark
        border-radius 50%
