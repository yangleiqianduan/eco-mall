$root-size = 10px
$font-size12 = 1.2rem
$font-size14 = 1.4rem
$font-size16 = 1.6rem
$font-size18 = 1.8rem
$font-size20 = 2rem

// 通用色
$color-white = #fff
$color-gray = #f6f6f6
$color-dark = #333333
$color-normal = #6B7072
$color-light = #BBBBBB
$color-bright = #FFD819
$color-spc = #FF5848

$color-border = #E5E5E5
$color-tag = #394043

// 将 px 转换成 rem
px2rem(arguments=12)
  (arguments+0rem) / $root-size

// 处理浏览器私有前缀
prefixed(prop,args)
  -o-{prop} args
  -ms-{prop} args
  -moz-{prop} args
  -webkit-{prop} args
  {prop} args
// 过渡、动画、变形
transition()
  prefixed(transition, arguments)
animation()
  prefixed(animation, arguments)
transform()
  prefixed(transform, arguments)
transform-origin(arguments = 0 0)
  prefixed(transform-origin, arguments)

// 处理border
border(path=all,width=1px,color=$color-border,style=solid)
  if path==none
    border none
  else if path==all
    border width style color
    if width==1px
      border .5px style color
  else if path==top
    border-top width style color
    if width==1px
      border-top .5px style color
  else if path==right
    border-right width style color
    if width==1px
      border-right .5px style color
  else if path==bottom
    border-bottom width style color
    if width==1px
      border-bottom .5px style color
  else if path==left
    border-left width style color
    if width==1px
      border-left .5px style color

// 按钮
btn()
  text-align center
  cursor pointer
  user-select none
  transition all .1s
.brightBtn
  background #ffeded
  color $color-bright
  &:active
    background $color-bright + 60%
  &.disabled
    background #f1f1f1
    color #666
  btn()
.darkBtn
  background $color-dark
  color #fff
  &:active
    background $color-dark + 40%
  btn()

// 布局
box()
  display -webkit-box
  display -webkit-flex
  display -ms-flexbox
  display flex
flex(arguments = 1)
	-webkit-box-flex arguments
	-webkit-flex arguments
	-ms-flex arguments
	flex arguments
align-items(arguments = center)
	-ms-flex-align arguments
	-webkit-box-align arguments
	-webkit-align-items arguments
	align-items arguments
justify-content(arguments = center)
	-ms-flex-pack arguments
	-webkit-box-pack arguments
	-webkit-justify-content arguments
	justify-content arguments

// 截字
G-cut-txt()
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
G-cut-p(arguments = 2)
	display -webkit-box !important
	overflow hidden
	text-overflow ellipsis
	word-break break-all
	-webkit-box-orient vertical
	-webkit-line-clamp arguments
