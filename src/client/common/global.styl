$font-size = 12px
$color-white = #fff
$color-gray = #f6f6f6
$color-dark = #333333
$color-bright = #FFD819
$border = 1px solid #E5E5E5

transition()
  transition arguments
  -o-transition arguments
  -moz-transition arguments
  -webkit-transition arguments

flex()
  flex arguments
  -o-flex arguments
  -moz-flex arguments
  -webkit-flex arguments

display-flex()
  width 100%
  display flex
  display -o-flex
  display -moz-flex
  display -webkit-flex

btn()
  text-align center
  cursor pointer
  user-select none
  transition all .1s

.brightBtn
  background #ffeded
  color $color-bright
  &:active
    background $color-bright + 60%
  &.disabled
    background #f1f1f1
    color #666
  btn()

.darkBtn
  background $color-dark
  color #fff
  &:active
    background $color-dark + 40%
  btn()

// 原子类 - 布局
.G-layout-box
  display -webkit-box
	display -webkit-flex
	display -ms-flexbox
	display flex
.G-box-col
	-webkit-box-flex: 1
	-webkit-flex 1
	-ms-flex 1
	flex 1
.G-center-v
	-ms-flex-align center
	-webkit-box-align center
	-webkit-align-items center
	align-items center
.G-center-h
	-ms-flex-pack center
	-webkit-box-pack center
	-webkit-justify-content center
	justify-content center
// 截字
.G-cut-txt
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
G-cut-p()
		display:-webkit-box !important;
		overflow:hidden;
		text-overflow:ellipsis;
		word-break:break-all;
		-webkit-box-orient:vertical;
		-webkit-line-clamp:arguments;
